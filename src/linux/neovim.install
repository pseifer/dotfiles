#!/bin/bash

mkdir -p ~/.programs-from-git
mkdir -p ~/bin

cd "$HOME"
rm -r "$HOME/.programs-from-git/nvim-linux64"

curl -fLOs https://github.com/neovim/neovim/releases/download/stable/nvim-linux64.tar.gz
tar -xzvf nvim-linux64.tar.gz
rm nvim-linux64.tar.gz
mv nvim-linux64 "$HOME/.programs-from-git"
ln -s "$HOME/.programs-from-git/nvim-linux64/bin/nvim" "$HOME/bin/nvim"
