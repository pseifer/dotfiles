#!/bin/bash

MY_NVIM_INSTALL="$HOME/.local/bin"

mkdir -p "$MY_NVIM_INSTALL"
mkdir -p "$HOME/bin"

cd "$HOME"
rm -r "$MY_NVIM_INSTALL/nvim-linux64"

curl -fLOs https://github.com/neovim/neovim/releases/download/stable/nvim-linux64.tar.gz
tar -xzvf nvim-linux64.tar.gz
rm nvim-linux64.tar.gz
mv nvim-linux64 "$MY_NVIM_INSTALL"
ln -s "$MY_NVIM_INSTALL/nvim-linux64/bin/nvim" "$HOME/bin/nvim"
