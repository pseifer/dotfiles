[storage cal_local]
type = "filesystem"
path = "~/.local/share/calendars/"
fileext = ".ics"

[storage cal_remote]
type = "caldav"
url = "https://cloud.seifer.me/"
username = "pseifer"
password.fetch = ["command", "~/.get-cloud-password.sh"]

