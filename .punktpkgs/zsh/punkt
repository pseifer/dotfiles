#!/bin/bash

if punkt test --pack "apt"; then
    punkt system fzf bat zoxide imagemagick fd-find fim zsh tmux
    sudo snap install glow
else
    punkt system fzf bat zoxide imagemagick fd glow
fi

# Install fast-syntax-highlighting for ZSH.
punkt git "https://github.com/zdharma-continuum/fast-syntax-highlighting.git"

# Install additional zsh-completions for ZSH.
punkt git "https://github.com/zsh-users/zsh-completions.git"

# Install s1ck3r prompt.
punkt git "https://github.com/pseifer/s1ck3r"

# Install default keybindings for FZF.
punkt curl "https://raw.githubusercontent.com/junegunn/fzf/master/shell/key-bindings.zsh" --name "fzf-key-bindings.zsh"
